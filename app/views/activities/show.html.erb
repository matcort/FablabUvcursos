<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @activity.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:browser) %></dt>
      <dd><pre class="prettyprint"><%= @activity.browser %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ip_address) %></dt>
      <dd><pre class="prettyprint"><%= @activity.ip_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:controller) %></dt>
      <dd><pre class="prettyprint"><%= @activity.controller %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:action) %></dt>
      <dd><pre class="prettyprint"><%= @activity.action %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:params) %></dt>
      <dd><pre class="prettyprint"><%= @activity.params %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:note) %></dt>
      <dd><pre class="prettyprint"><%= @activity.note %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              activities_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_activity_path(@activity), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              activity_path(@activity),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>